{
 "version": 6,
 "cmakeMinimumRequired": {
   "major": 3,
   "minor": 23,
   "patch": 0
 },
 "configurePresets": [
   {
        "name": "default",
        "displayName": "Default Config",
        "description": "Default build using Unix Makefiles",
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "toolchainFile": "${sourceDir}/cmake/arm_gcc_toolchain.cmake",
        "cacheVariables": {
            "CMAKE_MAKE_PROGRAM": "/usr/bin/make",
            "CFG_CORE": "M4",
            "CFG_BUILD_TYPE": "DEV"
        }
   },
   {
       "name": "cm4_build_dev",
       "inherits": [ "default" ],
       "cacheVariables": {
           "CFG_CORE": "M4"
       }
   },
   {
       "name": "cm7_build_dev",
       "inherits": [ "default" ],
       "cacheVariables": {
           "CFG_CORE": "M7"
       }
   },
   {
        "name": "debug",
        "inherits": [ "default" ],
        "binaryDir": "${sourceDir}/build/ci-${presetName}",
        "cacheVariables": {
            "CFG_BUILD_TYPE": "Debug"
     }
   },
   {
        "name": "release",
        "inherits": [ "default" ],
        "binaryDir": "${sourceDir}/build/ci-${presetName}",
        "cacheVariables": {
            "CFG_BUILD_TYPE": "Release"
        }
   }
 ],
 "buildPresets": [
   {
     "name": "default",
     "configurePreset": "default"
   },
   {
      "name": "cm4_build_dev",
      "configurePreset": "cm4_build_dev"
   },
   {
      "name": "cm7_build_dev",
      "configurePreset": "cm7_build_dev"
   },
   {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    }
 ]
}